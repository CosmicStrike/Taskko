<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Taskko</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/components/taskcard.css">
  </head>

  <body>
    <%- include('./components/header.ejs') %>
      <div class="page-container">
        <!-- <%- include('./components/navbar.ejs') %> -->
        <main>
          <section class="search">
            <input class="search-bar" type="text" name="search-task" placeholder="Search">
            <select id="task-category">
              <option value="All">All</option>
              <option value="Work">Work</option>
              <option value="Personal">Personal</option>
            </select>
          </section>

          <hr class="separator">

          <div class="task-container">
            <%- include('./components/taskcard.ejs') %>
              <%- include('./components/taskcard.ejs') %>
          </div>


          <div class="add-task">
            <span class="material-symbols-outlined add-button">
              add
            </span>
          </div>


          <form class="create-task">

            <div class="create-task-close"><span class="material-symbols-outlined" style="cursor: pointer;">
                close
              </span></div>

            <p class="create-task-header">Add Task</p>
            <input class="create-task-field" type="text" name="task-title" placeholder="Title" maxlength="75">
            <textarea class="create-task-textarea" type="text" name="task-description" maxlength="150"
              placeholder="Description (optional)"></textarea>

            <label class="task-deadline" for="task-deadline">Deadline : <input type="date" name="task-deadline"
                style="width: 8rem; height: 1.8rem;"></label>
            <label id="create-task-category">Task Cateogry :
              <select style="width: 5.6rem; height: 1.8rem; padding: 0.2rem;">
                <option value="Personal">Personal</option>
                <option value="Work">Work</option>
              </select>
            </label>

            <input class="task-create-button" type="submit" name="add-task" value="Add">
          </form>
        </main>
      </div>
  </body>
  <script src="/javascripts/main.js"></script>
  <script src="javascripts/taskcard.js"></script>

</html>