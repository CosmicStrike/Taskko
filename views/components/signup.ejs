<link rel="stylesheet" href="/stylesheets/compenents/login.css">
<div class="login-container">
    <p class="component-title">Sign Up</p>
    <form class="login-form">

        <input class="login-field" type="text" placeholder="Username" name="username">
        <p class="error-message"></p>

        <input class="login-field" type="email" placeholder="email" name="email">
        <p class="error-message"></p>

        <input class="login-field" type="password" placeholder="Password" name="password">
        <span class="error-message"></span>

        <input class="login-field" type="password" placeholder="Re-Enter Password" name="confirm-password">
        <span class="error-message"></span>

        <input class="login-button" type="submit" value="Sign Up">
        <div class="login-footer">
            <a style="color: #C200FF;cursor: pointer; font-weight: bold;">Back</a>
        </div>
    </form>
</div>